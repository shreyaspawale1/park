<div>
  <div>
    <h1>
      Park #<%= @the_park.id %> details
    </h1>

    <div>
      <div>
        <a href="/parks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_park/<%= @the_park.id %>">
          Delete park
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_park.name %>
      </dd>

      <dt>
        Open year round
      </dt>
      <dd>
        <%= @the_park.open_year_round %>
      </dd>

      <dt>
        Website
      </dt>
      <dd>
        <%= @the_park.website %>
      </dd>

      <dt>
        State
      </dt>
      <dd>
        <%= @the_park.state_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_park.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_park.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit park
    </h2>

    <form action="/modify_park/<%= @the_park.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_park.name %>">
      </div>

      <div>
        <input type="checkbox" id="open_year_round_box" name="query_open_year_round" value="1" <%= "checked" if @the_park.open_year_round %>>

        <label for="open_year_round_box">
            Open year round
        </label>
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website" value="<%= @the_park.website %>">
      </div>

      <div>
        <label for="state_id_box">
          State
        </label>

        <input type="text" id="state_id_box" name="query_state_id" value="<%= @the_park.state_id %>">
      </div>

      <button>
        Update park
      </button>
    </form>
  </div>
</div>

<hr>
