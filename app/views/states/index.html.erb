<div>
  <div>
    <h2>
      List of all states
    </h2>
  </div>
</div>

<div>
  <div>
    <table>
      <tr>

        <th>
          Name
        </th>

        <th>
          Capital
        </th>

        <th>
          Website
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_states.each do |a_state| %>

        <td>
          <%= a_state.name %>
        </td>

        <td>
          <%= a_state.capital %>
        </td>

        <td>
          <a href="<%= a_state.website %>">
            <%= a_state.website %>
          </a>
        </td>

        <td>
          <a href="/states/<%= a_state.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new state
    </h2>

   <form action="/insert_state" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="capital_box">
          Capital
        </label>

        <input type="text" id="capital_box" name="query_capital">
      </div>

      <div>
        <label for="website_box">
          Website
        </label>

        <input type="text" id="website_box" name="query_website">
      </div>

    </form>
  </div>
</div>

<hr>
