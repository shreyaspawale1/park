<div>
  <div>
    <h1>
      <%= @the_attraction.name %> details
    </h1>

    <div>
      <div>
        <a href="/attractions">
          All Attractions
        </a>
      </div>

      <div>
        <a href="/delete_attraction/<%= @the_attraction.id %>">
          Delete attraction
        </a>
      </div>
    </div>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_attraction.name %>
      </dd>

    <dl>
      <dt>
        Park
      </dt>
      <dd>
        <%= @the_attraction.park.name %>
      </dd>

      <dt>
        Activity
      </dt>
      <dd>
        <%= @the_attraction.activity.name %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit attraction
    </h2>

    <form action="/modify_attraction/<%= @the_attraction.id %>"  method="post" >
      <div> 
        <label for="park_id_box">
          National Park
        </label>

        <select id="park_id_box" name="query_park_id">
          <% Park.all.order({ :title => :asc }).each do |a_park| %>
            <option value="<%= a_park.id %>">
              <%= a_park.name %>
            </option>
          <% end %>
        </select>
      </div>

      <div> 
        <label for="activity_id_box">
          Activity
        </label>

        <select id="activity_id_box" name="query_activity_id">
          <% Activity.all.order({ :title => :asc }).each do |a_activity| %>
            <option value="<%= a_activity.id %>">
              <%= a_activity.name %>
            </option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_attraction.name %>">
      </div>

      <button>
        Update attraction
      </button>
    </form>
  </div>
</div>

<hr>
